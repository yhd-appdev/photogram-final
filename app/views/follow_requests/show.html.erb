<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Follow request #<%= @follow_request.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/follow_requests" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_follow_request/<%= @follow_request.id %>" class="btn btn-block btn-outline-secondary">
          Delete follow request
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Status
      </dt>
      <dd>
        <%= @follow_request.status %>
      </dd>

      <dt>
        Recipient
      </dt>
      <dd>
        <%= @follow_request.recipient_id %>
      </dd>

      <dt>
        Sender
      </dt>
      <dd>
        <%= @follow_request.sender_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@follow_request.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@follow_request.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit follow request
    </h2>

    <form action="/modify_follow_request/<%= @follow_request.id %>"  method="post" >
      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="status_box" name="query_status" value="1" <%= "checked" if @follow_request.status %>>

        <label class="custom-control-label"
          for="status_box">Status</label>
      </div>

      <div class="form-group">
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id" class="form-control" value="<%= @follow_request.recipient_id %>">
      </div>

      <div class="form-group">
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id" class="form-control" value="<%= @follow_request.sender_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update follow request
      </button>
    </form>
  </div>
</div>

<hr>
